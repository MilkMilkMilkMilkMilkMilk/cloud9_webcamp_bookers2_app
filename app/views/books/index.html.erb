<main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <div class="col-md-3">
                <h2>User info</h2>
                <%= attachment_image_tag @user, :profile_image, size:'63x63', format: 'jpeg', fallback: "no_image.jpg" %>
                <table class="table">
                    <tbody>
                        <tr></tr>
                        <tr>
                            <th>name</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>introduction</th>
                            <th></th>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %><% end %>
                </div>

                <h2 class="mt-3">New Book</h2>
                <%= form_with model: @book, local:true do |f| %>
                  <div class="form-group">
                      <label for="book_title">Title</label>
                      <%= f.text_field :title, class: "form-control book_title text book[title] book_title " %>
                  </div>
                  <div class="form-group">
                      <label for="book_opinion">Opinion</label>
                      <%= f.text_area :body, class: "form-control book_body book[body] book_body" %>
                  </div>
                  <div class="form-group">
                      <%= f.submit 'Create Book', class: "submit commit Create Book btn btn-success Create Book" %>
                  </div>
                <% end %>
            </div>

            <div class="col-md-8 offset-md-1">
                <h2>Books</h2>
                <% @books.each do |book| %>
                  <table class="table table-hover table-inverse">
                      <thead>
                          <tr>
                              <th></th>
                              <th>Title</th>
                              <th>Opinion</th>
                              <th colspan="3"></th>
                          </tr>
                      </thead>
                      <tbody>
                          <tr>
                              <td></td>
                              <td><%= book.title %></td>
                              <td><%= book.body %></td>
                          </tr>
                      </tbody>
                  </table>
                <% end %>
            </div>
        </div>
    </div>
</main>