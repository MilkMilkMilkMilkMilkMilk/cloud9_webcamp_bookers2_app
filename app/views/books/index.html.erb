<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, size:'63x63', format: 'jpeg', fallback: "no_image.jpg" %>
            <p>name</p>
            <p>introduction</p>

            <h1>New book</h1>
            <%= form_with model: @book, url:'/books', local:true do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book ' %>
            <% end%>
        </div>

        <div class="col-lg-8">

        </div>
    </div>
</div>