<main>
  <div class="container">
    <div class="row">
      <%= render 'books/book', book: @books, user: @user %>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg" %>
                <br><%= @user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to edit_book_path(@book), class: "btn btn-sm btn-success Edit" do %>Edit<% end %></td>
              <td><%= link_to books_path, method: :delete, data: { confirm: '本当に消しますか？'}, class: "btn btn-sm btn-danger Destroy" do %>Destroy<% end %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</main>